<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<zookeeper ip="120.78.77.206:2183"/>
	
	<!-- 连接相关参数 -->
	<property>
		<!-- 该服务监听的本机IP和tcp端口 -->
		<connection ip="127.0.0.1" port="17666" timeout="3000"/>
		<!-- 最大接受请求（字节,默认值是1024） -->
		<netty maxBuf="65535"/>
	</property>	
	<!-- 所有能提供服务的接口 -->
	<services>
		<!-- name的值为接口名字，客户端通过代理工程生成接口时需要, impl值为具体实现类全路径 -->
		<service name="userService" impl="com.rpc.service.Impl.UserServiceImpl"/>
		<service name="personService" impl="com.rpc.service.Impl.PersonServiceImpl"/> 	
		<service name="appleService" impl="com.rpc.service.Impl.AppleServiceImpl"/> 	 	
	</services>
</configuration>